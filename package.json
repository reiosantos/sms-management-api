{
	"name": "sms-managent-api",
	"version": "0.0.0",
	"author": "reio santos",
	"private": true,
	"main": "app/index.js",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/reiosantos/sms-management-api.git"
	},
	"homepage": "https://github.com/reiosantos/sms-management-api#readme",
	"bugs": {
		"url": "https://github.com/reiosantos/sms-management-api/issues"
	},
	"scripts": {
		"serve": "nodemon --exec babel-node lib/app/server.js",
		"build": "rimraf lib/ && babel ./ --out-dir lib/ --ignore ./node_modules",
		"start": "NODE_ENV=production yarn run build && yarn run serve",
		"start:dev": "NODE_ENV=development DEBUG=sms-management-api nodemon --exec babel-node app/server.js",
		"lint": "node_modules/.bin/eslint ./",
		"test": "NODE_ENV=test mocha --require @babel/register --require dotenv/config --exit",
		"test:coverage": "NODE_ENV=test npm run db:rollmigrate && nyc mocha --require @babel/register --require dotenv/config --exit",
		"db:seed": "node_modules/.bin/sequelize db:seed:all",
		"db:migrate": "node_modules/.bin/sequelize db:migrate",
		"db:rollback": "node_modules/.bin/sequelize db:migrate:undo:all",
		"db:rollmigrate": "yarn db:rollback && yarn db:migrate && yarn db:seed"
	},
	"dependencies": {
		"@babel/runtime": "^7.2.0",
		"bcrypt": "^5.0.0",
		"body-parser": "^1.19.0",
		"cookie-parser": "~1.4.4",
		"cors": "^2.8.5",
		"coveralls": "^3.0.2",
		"debug": ">=2.6.9",
		"dotenv": "^6.2.0",
		"express": "~4.16.1",
		"express-jwt": "^5.3.1",
		"express-validator": "^5.3.1",
		"http-errors": "~1.6.3",
		"jsonwebtoken": "^8.4.0",
		"moment": "^2.24.0",
		"morgan": "~1.9.1",
		"mysql": "^2.16.0",
		"mysql2": "^1.6.4",
		"node-sass-middleware": "0.11.0",
		"nodemon": "^1.18.9",
		"passport": "^0.4.0",
		"passport-local": "latest",
		"sequelize": "^5.8.6",
		"sequelize-cli": "^5.4.0",
		"swagger-jsdoc": "^3.2.9",
		"swagger-ui-express": "^4.0.2",
		"validator": "^10.9.0"
	},
	"devDependencies": {
		"@babel/cli": "^7.2.3",
		"@babel/core": "^7.2.2",
		"@babel/node": "^7.2.2",
		"@babel/plugin-proposal-class-properties": "^7.2.3",
		"@babel/plugin-transform-runtime": "^7.2.0",
		"@babel/preset-env": "^7.2.3",
		"@babel/register": "^7.0.0",
		"babel-eslint": "^10.0.1",
		"babel-plugin-istanbul": "^5.1.0",
		"chai": "^4.2.0",
		"chai-http": "^4.2.0",
		"eslint": "^5.10.0",
		"eslint-config-airbnb-base": "^13.1.0",
		"eslint-config-prettier": "^3.3.0",
		"eslint-plugin-import": "^2.14.0",
		"mocha": "^5.2.0",
		"nyc": "^13.1.0",
		"prettier": "^1.15.3",
		"rimraf": "^2.6.2",
		"sinon": "^7.2.2"
	}
}
